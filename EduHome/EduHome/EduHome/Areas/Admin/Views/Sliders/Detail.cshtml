@model Slider

@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-center">
                    <img class="my-3" style="object-fit: cover; width: 300px; height: 180px !important" src="~/img/slider/@Model.Image" />
                </div>
                <h4>Title: @Model.Title</h4>
                <div>Subtitle: @Model.SubTitle</div>
                <a class="btn btn-behance my-3" asp-action="Index">Cancel</a>
            </div>
        </div>
    </div>
</div>

