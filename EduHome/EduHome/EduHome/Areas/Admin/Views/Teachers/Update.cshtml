@model Teacher
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Teacher</h4>
                <div class="my-3">
                    <img style="width:300px; height:180px; object-fit:contain" src="~/img/teacher/@Model.Image" />
                </div>
                <form method="post" enctype="multipart/form-data" class="forms-sample">
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input asp-for="Photo">
                        <span asp-validation-for="Photo" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName" class="form-control">
                        <span asp-validation-for="FullName" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Position select</label>
                        <select class="form-control" name="posId">
                            <option hidden value="@Model.PositionId">@Model.Position.Name</option>
                            @foreach (Position item in ViewBag.Positions)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-behance me-2">Update</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
