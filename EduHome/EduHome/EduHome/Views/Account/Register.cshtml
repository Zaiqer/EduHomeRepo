@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>sign up</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>sign up</h2>
                            <span>Please login using account detail bellow.</span>
                            <div style="color: red" asp-validation-summary="ModelOnly"></div>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div class="mb-3" style="margin-bottom : 20px">
                                    <input asp-for="FullName" placeholder="FullName" style="margin-bottom:4px">
                                    <span asp-validation-for="FullName" style="padding-left: 10px; color:red !important;" class="text-danger mb-3"></span>
                                </div>
                                <div class="mb-3" style="margin-bottom : 20px">
                                    <input asp-for="UserName" placeholder="UserName" style="margin-bottom:4px">
                                    <span asp-validation-for="UserName" style="padding-left: 10px; color:red !important;" class="text-danger mb-3"></span>
                                </div>
                                <div class="mb-3" style="margin-bottom : 20px">
                                    <input asp-for="Email" placeholder="Email" style="margin-bottom:4px">
                                    <span asp-validation-for="Email" style="padding-left: 10px; color:red !important;" class="text-danger mb-3"></span>
                                </div>
                                <div class="mb-3" style="margin-bottom : 20px">
                                    <input asp-for="Password" placeholder="Password" style="margin-bottom:4px">
                                    <span asp-validation-for="Password" style="padding-left: 10px; color:red !important;" class="text-danger mb-3"></span>
                                </div>
                                <div class="mb-3" style="margin-bottom : 20px">
                                    <input asp-for="CheckPassword" placeholder="CheckPassword" style="margin-bottom:4px">
                                    <span asp-validation-for="CheckPassword" style="padding-left: 10px; color:red !important;" class="text-danger mb-3"></span>
                                </div>
                                <div class="button-box">
                                    @*<div class="login-toggle-btn">
                                            <input type="checkbox" id="remember">
                                            <label for="remember">Remember me</label>
                                            <a href="#">Forgot Password?</a>
                                        </div>*@
                                    <button type="submit" class="default-btn">sign up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register end -->
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}