@model Bio
@{
    Layout = null;
}

<header class="top">
    <div class="header-top">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-8 col-xs-12">
                    <div class="header-top-left">
                        <p>HAVE ANY QUESTION ?  @Model.PhoneNumber</p>
                    </div>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="header-top-right text-right">
                        <ul>
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li><a asp-controller="Account" asp-action="Login">login</a></li>
                                <li><a asp-controller="Account" asp-action="Register">signup</a></li>
                            }
                            else
                            {
                                <li><a>@User.Identity.Name</a></li>
                                <li><a asp-controller="Account" asp-action="Logout">logout</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-area two header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-3 col-xs-6">
                    <div class="logo">
                        <a asp-controller="Home" asp-action="Index"><img src="~/img/logo/@Model.Logo" alt="eduhome" /></a>
                    </div>
                </div>
                <div class="col-md-9 col-sm-9 col-xs-6">
                    <div class="content-wrapper text-right">
                        <!-- Main Menu Start -->
                        <div class="main-menu">
                            <nav>
                                <ul>
                                    <li>
                                        <a asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li><a asp-controller="About" asp-action="Index">About</a></li>
                                    <li>
                                        <a asp-controller="Courses" asp-action="Index">Courses</a>
                                        <ul>
                                            <li><a asp-controller="Courses" asp-action="Index">Courses</a></li>
                                            <li><a asp-controller="Courses" asp-action="Detail">Courses Details</a></li>
                                        </ul>
                                    </li>
                                    <li>
                                        <a asp-controller="Events" asp-action="Index">Events</a>
                                        <ul>
                                            <li><a asp-controller="Events" asp-action="Index">Events</a></li>
                                            <li><a asp-controller="Events" asp-action="Detail">Events Details</a></li>
                                        </ul>
                                    </li>
                                    <li class="hidden-sm">
                                        <a asp-controller="Teachers" asp-action="Index">Teachers</a>
                                        <ul>
                                            <li><a asp-controller="Teachers" asp-action="Index">Teachers</a></li>
                                            <li><a asp-controller="Teachers" asp-action="Detail">Teachers Details</a></li>
                                        </ul>
                                    </li>
                                    <li>
                                        <a asp-controller="Blogs" asp-action="Index">Blogs</a>
                                        <ul>
                                            <li><a asp-controller="Blogs" asp-action="Index">Blogs</a></li>
                                            <li><a asp-controller="Blogs" asp-action="Detail">Blogs Details</a></li>
                                        </ul>
                                    </li>
                                    <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin</a></li>
                                    }
                                </ul>
                            </nav>
                        </div>
                        <!--Search Form Start-->
                        <div class="search-btn">
                            <ul data-toggle="dropdown" class="header-search search-toggle">
                                <li class="search-menu">
                                    <i class="fa fa-search"></i>
                                </li>
                            </ul>
                            <div class="search" style="text-align: left">
                                <div class="search-form">
                                    <form id="search-form">
                                        <input type="text" id="search-input" placeholder="Search here..." />
                                    </form>
                                </div>
                                <ul id="search-ul" style="background-color: white; overflow: auto; height: 240px">
                                </ul>
                            </div>
                        </div>
                        <!--End of Search Form-->
                        <!-- Main Menu End -->
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="mobile-menu hidden-lg hidden-md hidden-sm"></div>
                </div>
            </div>
        </div>
    </div>
</header>